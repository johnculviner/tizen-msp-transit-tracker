{
  "private": true,
  "name": "TransitTracker",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --no-prerender --service-worker false",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "emulator": "npm run build && node ./tizen-build.js emulator",
    "hmr-emulator": "preact watch & node ./tizen-build.js hmr-emulator",
    "device": "npm run build && node ./tizen-build.js device"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "brace-style": 0,
      "radix": 0,
      "react/sort-comp": 0,
      "semi": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        2
      ]
    }
  },
  "tizen": {
    "projectId": "uk1A2xnaIo",
    "signatureName": "JohnCulviner"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "lodash": "4.17.5",
    "node-sass": "4.7.2",
    "preact-cli": "^2.1.0",
    "preact-render-spy": "^1.2.1",
    "sass-loader": "6.0.6"
  },
  "dependencies": {
    "lodash.get": "4.4.2",
    "preact": "^8.2.6"
  }
}
